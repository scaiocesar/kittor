<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
						   http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
						   http://www.springframework.org/schema/context http://www.springframework.org/schema/task/spring-context-3.0.xsd">

    <!-- Basic Configurations -->
	<context:annotation-config />

    <context:component-scan base-package="com.dc3.managedbean"/>
    <context:component-scan base-package="com.dc3.model"/>
    <context:component-scan base-package="com.dc3.repository"/>
    <context:component-scan base-package="com.dc3.service"/>
    <context:component-scan base-package="com.dc3.utils"/>
    <context:component-scan base-package="com.dc3.converter"/>
    <context:component-scan base-package="com.dc3.servlet"/>
    <!-- SpringData -->
    <import resource="spring-jpa.xml"/>
    <import resource="spring-security.xml"/>
</beans>